    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug QEmu",
            "type": "cppdbg",
            "request": "launch",
            "program": "boot_iso/boot_part/kernel/enkel.elf",
            "preLaunchTask": "buildAndRunDebug",
            "miDebuggerServerAddress": "localhost:5000",
            "linux": {
                "MIMode": "gdb"
            },
            "postRemoteConnectCommands": [ 
                { "description": "1", "ignoreFailures": false, "text": "source EnkelDebugging/qemu_gdb_commands.txt" },
                { "description": "2", "ignoreFailures": false, "text": "source EnkelDebugging/qemu_gdb_onlaunch.py" }
            ],
            "cwd": "${workspaceRoot}",
        }
    ]
}